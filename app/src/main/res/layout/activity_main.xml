<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.vinayak.sqlitetest.MainActivity">


    <TextView
    android:id="@+id/tv_sqlite_db"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SQLite DB"
        android:layout_marginTop="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginTop="5dp">
            <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:hint="Name"
            android:layout_weight=".35"
            />
            <EditText
            android:id="@+id/etNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
                android:hint="Number"
            android:inputType="number"
            android:layout_weight=".35"
                />


            <Button
            android:id="@+id/insertOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="InsertOne"
            android:layout_weight=".30"
                android:background="@drawable/my_button_bg"

                />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginTop="5dp"
        >
            <Button
            android:id="@+id/displayAll"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="DisplayContacts"
                android:background="@drawable/my_button_bg"

                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginTop="5dp"       >

        <EditText
            android:id="@+id/etSelectOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Id"
            android:inputType="number"
            android:layout_weight=".5"
            />

        <Button
            android:id="@+id/selectOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SelectById"
            android:layout_weight=".5"
            android:background="@drawable/my_button_bg"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginTop="5dp"
        >

            <EditText
            android:id="@+id/etDeleteOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Id"
            android:inputType="number"
            android:layout_weight=".5"
            />

            <Button
            android:id="@+id/deleteOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deletebyID"
                android:hint="id"
            android:layout_weight=".5"
                android:background="@drawable/my_button_bg"

                />
    </LinearLayout>


    <TextView
        android:id="@+id/tvSelectedCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/deleteAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DeleteAll"
        android:background="@drawable/my_button_bg"
        android:layout_marginTop="5dp"
        />

</LinearLayout>
